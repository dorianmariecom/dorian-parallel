#!/usr/bin/env ruby
# frozen_string_literal: true

require "dorian/arguments"
require "parallel"

parsed = Dorian::Arguments.parse(version: { alias: :v }, help: { alias: :h })

abort parsed.help if parsed.options.help

if parsed.options.version
  abort File.read(File.expand_path("../../VERSION", __FILE__))
end

input = parsed.files.map { |file| File.read(file) }.join("\n")
input = $stdin.each_line.to_a.map(&:strip).join("\n") if input.empty?
Parallel.each(input.lines.map(&:strip)) { |it| eval(parsed.arguments.join(" ")) }
